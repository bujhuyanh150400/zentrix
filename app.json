{
  "expo": {
    "name": "zentrix",
    "slug": "zentrix",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/zentrix_logo.png",
    "scheme": "zentrix",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Ứng dụng cần sử dụng camera để chụp ảnh CCCD.",
        "NSPhotoLibraryUsageDescription": "Ứng dụng cần truy cập thư viện ảnh để chọn ảnh CCCD.",
        "NSPhotoLibraryAddUsageDescription": "Ứng dụng cần quyền ghi ảnh vào thư viện."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/zentrix_logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/zentrix_logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "textColor": "#000000"
        }
      ],
      "expo-secure-store",
      [
        "expo-video",
        {
          "supportsBackgroundPlayback": true,
          "supportsPictureInPicture": true
        }
      ],
      "expo-font",
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
